<?xml version="1.0" ?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot">

  <xacro:include filename="$(find my_robot)/urdf/colors.xacro" />
  <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />

    <!-- Robot footprint link -->
  <link name="robot_footprint"/>
  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint" />
    <child link="base_link" />    
  </joint>

    <!-- Robot base_link -->
  <link name="base_link">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <mass value="15.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
    <visual name="base_link">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.65 0.4 0.1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.65 0.4 0.1"/>
      </geometry>
    </collision>
   </link>


    <!-- xacro setup -->
  <xacro:macro name="wheel" params="name x y z r p n">

      <link name="${name}">
          <inertial>
              <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
              <mass value="10.0"/>
              <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
          </inertial>
          <visual name="${name}">
              <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
              <geometry>
                  <cylinder radius="0.08" length="0.05"/>
              </geometry>
              <material name="red">
              </material>
          </visual>
          <collision>
              <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
              <geometry>
                  <cylinder radius="0.08" length="0.05"/>
              </geometry>
          </collision>
      </link>

      <joint name="Joint_${name}" type="continuous">
          <origin xyz="${x} ${y} ${z}" rpy="${r} ${p} ${n}"/>
          <parent link="base_link"/>
          <child link="${name}"/>
          <axis xyz="0.0 0.0 1.0"/>
      </joint>
  </xacro:macro>

    <!--wheel with xacro-->
  <xacro:wheel name="Left_Wheel_Front" x="0.2" y="0.225" z="0.0" r="1.5708" p="3.14" n="3.14"/>
  <xacro:wheel name="Right_Wheel_Back" x="-0.2" y="-0.225" z="0.0" r="1.5708" p="3.14" n="3.14"/>
  <xacro:wheel name="Left_Wheel_Back" x="-0.2" y="0.225" z="0.0" r="1.5708" p="3.14" n="3.14"/>
  <xacro:wheel name="Right_Wheel_Front" x="0.2" y="-0.225" z="0.0" r="1.5708" p="3.14" n="3.14"/>

    <!-- Hokuyo_lidar -->
  <link name="hokuyo">
      <inertial>
          <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
          <mass value="0.25"/>
          <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
      </inertial>
      <visual name="hokuyo">
          <origin xyz="0.0 0.0 -0.015" rpy="0.0 0.0 0.0"/>
          <geometry>
              <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
          </geometry>
          <material name="realsense_material">
            <texture filename="package://my_robot/materials/textures/realsense_diffuse.png"/>
          </material>
      </visual>
      <collision>
          <origin xyz="0.0 0.0 -0.015" rpy="0.0 0.0 0.0"/>
          <geometry>
              <box size="0.1 0.1 0.1"/>
          </geometry>
      </collision>
  </link>

  <joint name="hokuyo_joint" type="fixed">
    <origin xyz="0.15 0.0 0.1" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="hokuyo"/>
    <axis xyz="0.0 1.0 0.0"/>
  </joint>

    <!-- camera -->
  <link name="camera_link">
      <inertial>
          <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
          <mass value="0.35"/>
          <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
      </inertial>
      <visual name="camera">
          <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
          <geometry>
              <mesh filename="package://my_robot/meshes/realsense.dae"/>
          </geometry>
      </visual>
      <collision>
          <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
          <geometry>
              <box size="0.05 0.05 0.05"/>
          </geometry>
      </collision>


  </link>

  <joint name="camera_joint" type="fixed">
      <origin xyz="0.33 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <parent link="base_link"/>
      <child link="camera_link"/>
      <axis xyz="0.0 1.0 0.0"/>
  </joint>
</robot>